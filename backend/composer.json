{
    "name": "karim-mohamady/global-threads-store-backend",
    "description": "Laravel REST API backend for Global Threads Store e-commerce platform",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "laravel/framework": "^11.0",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.8",
        "laravel/telescope": "^4.17",
        "spatie/laravel-translatable": "^6.5",
        "spatie/laravel-query-builder": "^5.9",
        "spatie/laravel-cors": "^3.0",
        "predis/predis": "^2.2",
        "doctrine/dbal": "^4.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.11",
        "barryvdh/laravel-ide-helper": "^2.15",
        "laravel/pint": "^1.14",
        "phpunit/phpunit": "^11.0",
        "laravel/sail": "^1.29"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php artisan storage:link"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "8.3"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}